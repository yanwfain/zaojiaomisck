  margin: 0 auto;
}
.btn_button{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  border-top: 2rpx solid #ccc;
}
.quxiao_btn{
  width: 49%;
  border-right: 2rpx solid #ccc;
  line-height: 80rpx;
  text-align: center;
}
.butn_bottys{
