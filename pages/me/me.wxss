page{
  background: rgb(247, 248, 248);
}

.top_user {
  background: url(https://hcc.baike360.cn/2d1fbe1b6d71743e63331fc131416b7.png) no-repeat center;
  background-size: 100% 100%;
  width: 100%;
  height: 400rpx;
}
.names_user{
  width: 60%;
  /* font-size: 30rpx; */
  text-align: center;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  margin: 0 auto;
  color: white;
  padding:20rpx 0;
}
.user_head {
  border-radius: 100%;
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto;
  padding-top: 50rpx;
}

.user_head image {
  width: 100%;
  height: 100%;
  border-radius: 100%;
}

.btn_all {
  width: 400rpx;
  border-radius: 40rpx;
  background: white;
  height: 80rpx;
  margin: 0 auto;
  margin-top: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
 
}

.left {
  border-right: 2rpx solid rgb(223, 127, 40);
  width: 49%;
  text-align: center;
  height: 80rpx;
}

.nums {
  color: rgb(223, 127, 40);
  font-size: 26rpx;
}

.txt_num {
  font-size: 26rpx;
}

.right {
  width: 50%;
  height: 80rpx;
  text-align: center;
}

.cont_list {
  width: 100%;
  margin: 30rpx auto;
  background: white;
  position: relative;
  display: flex;
  align-items: center;
   padding: 28rpx 0;
} 
.phone{
  position: absolute;
  right: 100rpx;
  font-size: 26rpx;
}
.txt_right {
  position: absolute;
  right: 40rpx;
  width: 10px;
  height: 10px;
  border-top: 2px solid gray;
  border-right: 2px solid gray;
  transform: rotate(45deg);
}
.img1{
  width: 50rpx;
  height: 50rpx;
  margin-left:40rpx;
  margin-right: 30rpx;
}
